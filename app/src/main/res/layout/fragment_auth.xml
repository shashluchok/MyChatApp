<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_main_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context=".features.auth.AuthFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/phone_lav"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/spacing_16dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_phone.json"
        app:lottie_loop="true"
        app:lottie_speed="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_marginTop="64dp"
        android:elevation="5dp"
        android:fontFamily="@font/andada_pro_bold"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/app_name"
        android:textColor="@color/color_white"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/phone_lav"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--   <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader_lav"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_lav"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_loader.json"
        app:lottie_loop="true"
        app:lottie_speed="1" />


-->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/auth_name_material_til"
        style="@style/CustomBorderColorMaterialTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:hint="@string/hint"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:textColorHint="@color/color_white_passive"
        app:boxCornerRadiusBottomEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="@color/color_white"
        app:layout_constraintEnd_toEndOf="@+id/auth_button_auth"
        app:layout_constraintStart_toStartOf="@+id/auth_button_auth"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <com.example.android.mychatapp.customviews.PreImeEditText
            android:id="@+id/auth_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingStart="@dimen/spacing_16dp"
            android:paddingEnd="@dimen/spacing_16dp"
            android:fontFamily="@font/andada_pro_regular"
            android:inputType="textNoSuggestions"
            android:maxLength="10"
            android:textColor="@color/color_white" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/auth_button_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/bg_auth_button"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="true"
        android:fontFamily="@font/andada_pro_regular"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/enter"
        android:textColor="@color/color_white"
        android:textSize="@dimen/button_text_size_20sp"
        android:transitionName="shared_element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>