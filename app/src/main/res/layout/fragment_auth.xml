<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_main_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context=".AuthFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/phone_lav"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        android:elevation="5dp"
        app:lottie_fileName="lottie_phone.json"
        app:lottie_loop="true"
        app:lottie_speed="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:fontFamily="@font/andada_pro_bold"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/app_name"
        android:textColor="@color/primaryTextColor"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/phone_lav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
 <!--   <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader_lav"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_lav"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_loader.json"
        app:lottie_loop="true"
        app:lottie_speed="1" />


-->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:elevation="5"
        app:boxCornerRadiusBottomEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxStrokeColor="@color/secondaryDarkColor"
        app:boxStrokeWidth="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:paddingTop="11dp"
        app:hintTextColor="@color/secondaryDarkColor"
        android:textColorHint="@color/color_white"
        android:paddingBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/auth_button_auth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textNoSuggestions"
            android:textColor="@color/color_white"
            android:maxLength="10"
            android:fontFamily="@font/andada_pro_bold"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/auth_button_auth"
        android:layout_width="0dp"
        android:transitionName="shared_element"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/bg_auth_button"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/andada_pro_bold"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/enter"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/button_text_size_20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>